<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_root"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    app:elevation="1dp">

    <LinearLayout
        android:id="@+id/base_swipe_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/base_swipe_item_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical|left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/base_swipe_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心理社团"
                android:textSize="21sp" />
            <TextView
                android:id="@+id/base_swipe_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大学生心理协会，是西南石油大学比较牛逼的协会111
                大学生心理协会，是西南石油大学比较牛逼的协会222
                大学生心理协会，是西南石油大学比较牛逼的协会333
                大学生心理协会，是西南石油大学比较牛逼的协会444"
                android:ellipsize="end"
                android:lines="4"
                android:textSize="16sp"/>
        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>